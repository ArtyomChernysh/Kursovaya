        mc:Ignorable="d"
        Title="Главное меню" Height="600" Width="800" Background="#00BFFF" Foreground="#FF8000"  Icon="C:\Users\Artem\Desktop\C#\RegastrationOfTheWeddingOrganizer\RegastrationOfTheWeddingOrganizer\bin\Debug\img\logo.gif">
